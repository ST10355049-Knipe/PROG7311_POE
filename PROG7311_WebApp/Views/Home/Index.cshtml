@{
    ViewData["Title"] = "Welcome to Green Agri-Energy Connect";
}

@* --- Hero Section --- *@
<div class="hero-section text-center text-white py-5 mb-4">
    <div class="container">
        @* --- Logo linked as an image file with a class for styling --- *@
        <img src="~/images/AGRI-ENERGYCONNECT.svg" alt="Green Agri-Energy Connect Logo" height="88" class="mb-3 hero-logo" />

        <h1 class="display-4 fw-bold">Connect. Grow. Sustain.</h1>
        <p class="lead fw-normal mb-4">
            Bridging South African agriculture with green energy solutions for a sustainable future.
        </p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg px-4">
            <i class="fas fa-sign-in-alt me-2"></i> Platform Login
        </a>
    </div>
</div>

@* --- About Section --- *@
<div class="container marketing py-5">
    <div class="row featurette align-items-center">
        <div class="col-md-7">
            <h2 class="featurette-heading fw-normal lh-1">Welcome to <span class="text-muted">Agri-Energy Connect.</span></h2>
            <p class="lead">
                Our platform is designed as a digital ecosystem to foster collaboration between farmers, green energy experts,
                and enthusiasts. We aim to share resources and drive innovation in sustainable agriculture and renewable energy across South Africa.
            </p>
        </div>
        <div class="col-md-5 text-center">
            @* Placeholder for an image related to farming/energy *@
            <i class="fas fa-tractor fa-10x text-secondary opacity-50"></i>
        </div>
    </div>

    <hr class="featurette-divider my-5">

    @* --- Key Features/Vision --- *@
    <div class="row text-center">
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-seedling fa-3x text-primary mb-3"></i>
                    <h3 class="fw-normal">Sustainable Farming Hub</h3>
                    <p>Access resources and best practices for organic farming, water conservation, and soil health. Connect with fellow farmers.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-solar-panel fa-3x text-primary mb-3"></i>
                    <h3 class="fw-normal">Green Energy Integration</h3>
                    <p>Explore green energy solutions tailored for agriculture, from solar irrigation to biogas, connecting farms to sustainable power.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h3 class="fw-normal">Collaboration & Innovation</h3>
                    <p>A space for farmers and energy experts to collaborate, share insights, and drive the future of sustainable agri-energy.</p>
                </div>
            </div>
        </div>
    </div>

    <hr class="featurette-divider my-5">

    @* --- Call to Action --- *@
    <div class="row">
        <div class="col text-center">
            <h2 class="fw-normal">Join the Platform</h2>
            <p class="lead">Log in to add your products or manage farmer profiles.</p>
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg px-4">
                <i class="fas fa-sign-in-alt me-2"></i> Login
            </a>
        </div>
    </div>

</div>
